<Window x:Class="Gu.Wpf.PropertyGrid.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Gu.Wpf.PropertyGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="1200"
        mc:Ignorable="d">
    <TabControl>
        <TabItem Header="with info">
            <local:InfoSettingsView />
        </TabItem>

        <!--<TabItem Header="plain">
            <local:PlainSettingsView />
        </TabItem>-->

        <TabItem Header="Props as headers">
            <local:UsePropertyNamesAsHeadersView />
        </TabItem>

        <TabItem Header="one way to source binding">
            <local:OneWayToSourceBindingView />
        </TabItem>
    </TabControl>
</Window>
