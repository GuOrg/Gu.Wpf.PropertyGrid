<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>library</OutputType>
    <TargetFramework>net45</TargetFramework>
    <UseWpf>true</UseWpf>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <CodeAnalysisRuleSet>Gu.Wpf.PropertyGrid.ruleset</CodeAnalysisRuleSet>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Gu.Wpf.PropertyGrid.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.0.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Johan Larsson</Authors>
    <Description>Property grid for WPF.</Description>
    <NeutralLanguage>en</NeutralLanguage>
    <RepositoryUrl>https://github.com/GuOrg/Gu.Wpf.PropertyGrid</RepositoryUrl>
    <PackageReleaseNotes>
    </PackageReleaseNotes>
    <PackageTags>wpf xaml propertygrid styles</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Service Include="{508349B6-6B84-4DF5-91F0-309BEEBAD82D}" />

    <None Include="Controls\Generated\PropertyGrid.Columns.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>PropertyGrid.Columns.generated.cs</LastGenOutput>
    </None>
    
    <None Include="Controls\Generated\PropertyGrid.MiscDependencyProperties.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>PropertyGrid.MiscDependencyProperties.generated.cs</LastGenOutput>
    </None>

    <None Include="Controls\Generated\PropertyGrid.Styles.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>PropertyGrid.Styles.generated.cs</LastGenOutput>
    </None>

    <Content Include="Themes\RowTemplates.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>RowTemplates.generated.xaml</LastGenOutput>
    </Content>

    <None Update="Themes\RowTemplates.generated.xaml">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>RowTemplates.tt</DependentUpon>
    </None>

    <Resource Include="Themes\RowTemplates.txt">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>RowTemplates.ttinclude</DependentUpon>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Gu.Analyzers" Version="1.8.1" PrivateAssets="all" />
    <PackageReference Include="IDisposableAnalyzers" Version="3.4.3" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" Version="16.8.51" PrivateAssets="all" />
    <PackageReference Include="PropertyChangedAnalyzers" Version="3.2.1" PrivateAssets="all" />
    <PackageReference Include="ReflectionAnalyzers" Version="0.1.22-dev" PrivateAssets="all" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.205" PrivateAssets="all" />
    <PackageReference Include="WpfAnalyzers" Version="3.2.0" PrivateAssets="all" />
  </ItemGroup>
</Project>